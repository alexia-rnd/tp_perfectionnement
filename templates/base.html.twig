<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
            {#* google font  #}
<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Epilogue:wght@500&family=Roboto:wght@300;400&display=swap" rel="stylesheet">
            
        {% endblock %}

        

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>


    <body>
        {% block body %}

            {% block header %}
            <header>
            
            <div class="d-flex header">
                <h1 class="c-1 text-center">PINTEREST</h1>

                <a class="button" href="{{ path('app_login') }}"> Me Connecter </a>

            </div>
                {# Barre de recherche  #}

                <form action="{{ path('front_search') }}" method="get"  class="d-flex">
                    <input type="search" name="term" placeholder="Rechercher une image" aria-label="Rechercher une image">
                    <input class="btn btn-dark" type="submit" value="Rechercher">
                </form>
                {# FIN Barre de recherche  #}
                </header>
            {% endblock %}

            {% block main %}{% endblock %}


            {% block footer %}
            <footer>
                <p>© Alexia Raynaud {{ "now" | date("Y") }} | Symfony Perfectionnement - Doranco</p>
            </footer>
            {% endblock %}
        
        {% endblock %}
    </body>
</html>
